import javax.swing.*;
public class firstSwingExample {
    public static void main(String[] args) {
        JFrame f = new JFrame(); //I am now creating an instance for the JFrame

        JButton b = new JButton("Click Here for 1 Million Dollars! (Not including Taxes)"); //Creates instance of JButton
        b.setBounds(150, 120, 150, 60); //Button coordinates, width, and height
        f.add(b); //Here I will be adding button to the JFrame
        f.setSize(450, 600);
        f.setLayout(null); //I am not using any layout managers here
        f.setVisible(true); //Make frame visible

    }
}